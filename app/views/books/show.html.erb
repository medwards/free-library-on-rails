<%= inheriting_view 'items/show' do %>
	<%= content_for :additional_fields do %>
		<tr>
			<th>author:</th>
			<td><%= link_to @item.author, search_items_path(q: @item.author, field: 'author') %></td>
		</tr>
		<% if @item.lcc_number.present? %>
			<tr>
				<th>LCC:</th>
				<td><%= h @item.lcc_number %></td>
			</tr>
		<% end %>
	<% end %>

	<%= content_for :additional_description do %>
		<% if @item.has_cover_image? %>
			<%= cover_photo @item %>
		<% end %>
	<% end %>
<% end %>
